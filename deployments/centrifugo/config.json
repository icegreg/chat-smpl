{
  "token_hmac_secret_key": "your-centrifugo-secret-key-change-in-production",
  "api_key": "centrifugo-api-key",
  "admin": true,
  "admin_password": "admin",
  "admin_secret": "admin-secret",
  "health": true,
  "prometheus": true,
  "allowed_origins": ["*"],

  "engine": "redis",
  "redis_address": "redis:6379",
  "redis_prefix": "centrifugo",

  "client_concurrency": 16,
  "client_channel_limit": 128,
  "client_queue_max_size": 10485760,
  "client_presence_update_interval": "27s",
  "client_expired_close_delay": "25s",
  "client_stale_close_delay": "25s",
  "client_channel_position_check_delay": "40s",

  "websocket_compression": false,
  "websocket_write_timeout": "5s",
  "websocket_message_size_limit": 65536,

  "gomaxprocs": 0,

  "namespaces": [
    {
      "name": "chat",
      "presence": true,
      "join_leave": true,
      "history_size": 100,
      "history_ttl": "24h",
      "force_recovery": true,
      "allow_subscribe_for_client": true
    },
    {
      "name": "user",
      "presence": false,
      "join_leave": false,
      "history_size": 50,
      "history_ttl": "1h",
      "force_recovery": true,
      "allow_subscribe_for_client": true
    },
    {
      "name": "conference",
      "presence": true,
      "join_leave": true,
      "history_size": 50,
      "history_ttl": "1h",
      "force_recovery": true,
      "allow_subscribe_for_client": true
    }
  ],
  "client_insecure": false,
  "log_level": "info"
}
