<configuration name="xml_curl.conf" description="cURL XML Gateway">
  <bindings>
    <!-- Directory binding for user authentication -->
    <binding name="directory">
      <param name="gateway-url" value="http://voice-service:8084/fs/directory" bindings="directory"/>
      <param name="timeout" value="5"/>
      <param name="enable-cacert-check" value="false"/>
      <param name="enable-ssl-verifyhost" value="false"/>
    </binding>
  </bindings>
</configuration>
