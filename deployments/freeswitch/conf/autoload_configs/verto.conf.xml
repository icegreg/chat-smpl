<configuration name="verto.conf" description="Verto Endpoint">
  <settings>
    <param name="debug" value="10"/>
    <param name="enable-presence" value="false"/>
  </settings>

  <profiles>
    <!-- WS profile (non-secure) for development/testing -->
    <profile name="default">
      <param name="bind-local" value="0.0.0.0:8081"/>
      <param name="force-register-domain" value="chatapp.local"/>
      <param name="userauth" value="true"/>
      <param name="context" value="default"/>
      <param name="dialplan" value="XML"/>
      <param name="mcast-ip" value="224.1.1.1"/>
      <param name="mcast-port" value="1337"/>
      <param name="rtp-ip" value="$${local_ip_v4}"/>
      <param name="ext-rtp-ip" value="$${external_rtp_ip}"/>
      <param name="local-network" value="localnet.auto"/>
      <param name="outbound-codec-string" value="opus,PCMU,PCMA"/>
      <param name="inbound-codec-string" value="opus,PCMU,PCMA"/>
      <param name="apply-candidate-acl" value="localnet.auto"/>
      <param name="apply-candidate-acl" value="rfc1918.auto"/>
      <param name="apply-candidate-acl" value="any_v4.auto"/>
      <param name="timer-name" value="soft"/>
    </profile>

    <!-- WSS profile disabled until certificates are configured
    <profile name="secure">
      <param name="bind-local" value="0.0.0.0:8082" secure="true"/>
      <param name="secure-combined" value="/certs/wss.pem"/>
      <param name="secure-chain" value="/certs/wss.crt"/>
    </profile>
    -->
  </profiles>
</configuration>
